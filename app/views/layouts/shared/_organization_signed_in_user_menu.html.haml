= active_link_to 'Inicio', home_path_helper, active: :inclusive, active: [['organizations'], ['show']], wrap_tag: :li
= active_link_to 'Documentos', organization_documents_path(current_organization), active: :inclusive, wrap_tag: :li
= active_link_to 'Plan de Apertura', inventories_datasets_path, active: :inclusive, wrap_tag: :li
