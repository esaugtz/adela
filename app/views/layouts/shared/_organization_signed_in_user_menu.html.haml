%li
  = link_to 'Guía', 'http://datos.gob.mx/guia/', target: '_blank'
%li.dropdown
  %a.dropdown-toggle{ href: '#', 'data-toggle': 'dropdown', role: 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
    = current_user.name
    %span.caret
  %ul.dropdown-menu
    %li= link_to 'Administrador', admin_root_path if current_user.has_role?(:admin)
