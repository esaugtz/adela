%tr.active.dataset
  %td.center
    %strong= dataset_counter+1
  %td
    %a.accordion-toggle{'data-toggle' => 'collapse', 'href' => ".dataset_#{dataset.id}_distributions"}
      = dataset.title
      %span.caret
  %td.center= pluralize(dataset.distributions.count, 'recurso')
  %td.center= dataset.public_access? ? 'PÃºblico' : 'Privado'
  %td.center= dataset.publish_date.strftime('%F') if dataset.publish_date
  %td.col-md-3
    = render partial: 'inventories/shared/menus/dataset_actions', locals: { dataset: dataset }
= render partial: 'inventories/shared/distribution', collection: dataset.distributions
